@using InventarioFIIAPP.Data.Models
@{
    ViewData["Title"] = "Movie List";
}
@model IEnumerable<Usuario>


<div class="d-inline-flex ">
    <div class="me-3">
        <h2>Usuarios</h2>
    </div>
    <div>
        <h2 class="bi bi-person-plus-fill" role="button" onclick="OpenAddModal()"></h2>
    </div>
</div>
<p>
    
</p>
<form asp-controller="usuario" asp-action="Index" method="get">
    <div class="row">
        <div class="col-3">
            <input type="text" name="filter" class="form-control" />
        </div>
        <div class="col-3">
            <button type="submit" value="Filter" class="btn btn-primary">
                <i class="bi bi-filter"></i>
                Filtrar
            </button>
        </div>
    </div>
</form>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Apellidos)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Apellidos)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    <a onclick="OpenEditModal(@item.IdUsuario)">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.IdUsuario">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.IdUsuario">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- modal placeholders-->
<div id="modal-edit" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <div id='modal-edit-content'></div>
        </div>
    </div>
</div>
<div id="modal-add" class=" modal fade in">
    <div class="modal-dialog">
        <div class="modal-content">
            <div id='modal-add-content'></div>
        </div>
    </div>
</div>
<div id="modal-delete" class=" modal fade in">
    <div class="modal-dialog">
        <div class="modal-content">
            <div id='modal-delete-content'></div>
        </div>
    </div>
</div>
<div id="modal-details" class="modal fade in">
    <div class="modal-dialog">
        <div class="modal-content">
            <div id='modal-details-content'></div>
        </div>
    </div>
</div>